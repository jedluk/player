{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "electron-starter.js",
  "scripts": {
    "start": "concurrently \"yarn run server:prod\" \"cross-env BROWSER=chrome yarn run start-client\"",
    "server:dev": "cross-env NODE_ENV=development WHITE_LIST=http://localhost:3003 nodemon src/index.js",
    "server:prod": "cross-env NODE_ENV=production WHITE_LIST=http://localhost:3003 node src/index.js",
    "start-client": "cd .. && cd client && cross-env HOST=localhost PORT=3003 yarn start",
    "start-electron": "wait-on http://localhost:3003 && cross-env NODE_ENV=production WHITE_LIST=http://localhost:3003 electron electron-starter",
    "electron-dev": "concurrently \"cross-env BROWSER=none yarn run start-client\" \"yarn run start-electron\"",
    "test": "jest --watchAll=true --env=node",
    "coverage": "jest --coverage --watchAll=false --env=node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "electron-builder": "^22.9.1",
    "electron-is-dev": "^1.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "node-id3": "^0.2.1",
    "wait-on": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^11.0.2",
    "jest": "24.9.0",
    "nodemon": "^2.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/routes.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/client",
      "<rootDir>/server/__mocks__"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ]
  }
}
